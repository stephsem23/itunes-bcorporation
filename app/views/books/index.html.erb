<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h4>iBook Lookup - Search by 13 digit ISBN Number <br>(*no dashes)</h4>

      <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :q %>
        <br>
          <button class="btn waves-effect waves-light" type="submit" name="action">
        <%= submit_tag "search" %>
      </button>
      <% end %>
      <br>
      <h5> Result for <%= params[:q] || "9780316069359" %></h5>

      <ol>
        <% for book in @books %>
        <li><%= image_tag book[:artworkUrl100] %><%= book[:trackName] %><a href="<%= book[:trackViewUrl] %>" target="_blank">View in Itunes</a></li>
        <% end %>
      </ol>
    </div>
</div>