<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h4>iBook Lookup - Search by 13 digit ISBN Number <br>(*no dashes)</h4>

      <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :q %>
      <br>
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <%= submit_tag "search" %>
        </button>
      <% end %>

      <br>

      <h5>You may test this app by using one of the following ISBN numbers below:

      <ul>
        <strong>
          <li>9780316069359</li>
          <li>9781443419789</li>
          <li>9780062073501</li>
        </strong>
      <ul>
      
      </h5>

      <hr>

      <h5> Result for ISBN <%= params[:q] || "9780062073501" %></h5>

      <ul>
        <% for book in @books %>
        <li><%= image_tag book[:artworkUrl100] %></li>
        <li><%= book[:trackName] %></li>
        <li><a href="<%= book[:trackViewUrl] %>" target="_blank">View In Itunes</a></li>
        <% end %>
      </ul>

    </div>
</div>