<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <h4>10 Most Recent Songs - Search by Artist's Name</h4>

        <%= form_tag root_path, method: :get do %>
          <%= text_field_tag :q %>
          <br>
          <button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag "search" %></button>
        <% end %>
          <br>
        <h5> Results for <%= params[:q] || "Adele" %></h5>

        <ol>
          <% for track in @tracks %>
          <li><%= image_tag track[:artworkUrl60] %><%= track[:trackName] %><a href="<%= track[:previewUrl] %>" target="_blank">Preview Song</a></li>
          <% end %>
        </ol>
    </div>
</div>