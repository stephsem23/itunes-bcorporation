<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h4>5 Recent Movies - Search by Actor's Name</h4>

      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :q %>
        <br>
          <button class="btn waves-effect waves-light" type="submit" name="action">
        <%= submit_tag "search" %>
      </button>
      <% end %>
      <br>
      <h5> Results for <%= params[:q] || "Leonardo Di Caprio" %></h5>

      <ol>
        <% for movie in @movies %>
        <li><%= image_tag movie[:artworkUrl100] %><%= movie[:trackName] %><br><a href="<%= movie[:trackViewUrl] %>" target="_blank">View In Itunes</a></li><br>
        <% end %>
      </ol>
    </div>
</div>